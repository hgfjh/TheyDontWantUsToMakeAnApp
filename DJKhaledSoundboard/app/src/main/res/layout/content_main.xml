<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_column="5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="suhasolu.djkhaledsoundboard.MainActivity"
    tools:showIn="@layout/activity_main"
    android:columnCount="6"
    android:rowCount="12">

    <Button android:id="@+id/another_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Another One"
        android:background="@drawable/red_button"
        android:onClick="sendAnotherOne"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="11dp"/>
    <Button android:id="@+id/lion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Lion"
        android:onClick="sendLion"
        android:background="@drawable/gold_button"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_margin="11dp"/>
    <Button android:id="@+id/yousmart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="You Smart"
        android:onClick="sendYouSmart"
        android:background="@drawable/green_button"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_margin="11dp"/>
</GridLayout>
